<GuiXml>
	<Controls>
		<TopLevelControl name="PersonalAssistantUI" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true" keyboardEnabled="1">
			<Dimensions x="760" y="650" />
			<Anchor point="CENTER" />
			
            <Controls>
                <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" />
            </Controls>
			
			<OnKeyDown>
				if(key == KEY_ESCAPE) then
					PAUI.toggleWindow()
				end
			</OnKeyDown>
		</TopLevelControl>
	</Controls>
</GuiXml>